<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Image">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Image.Full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Image.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.Full">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.Wrap.Complete">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Spinner" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinnerbackground</item>
        <item name="android:padding">5sp</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:background">@drawable/spinnerbackground</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:background">@drawable/spinnerbackground</item>
    </style>
</resources>