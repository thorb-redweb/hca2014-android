<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Layout.Full"
        >
    <dk.redweb.hca2014.Views.NavBarBox android:id="@+id/navbar"
            style="@style/Layout.Wrap"
            android:layout_alignParentTop="true"/>

    <LinearLayout
        style="@style/Layout.Full"
        android:layout_below="@+id/navbar"
        android:layout_above="@+id/tabbar"
        android:weightSum="1"
        android:baselineAligned="false">
        <LinearLayout android:id="@+id/frontpage_lnrTopBox"
                      android:layout_height="0dp"
                      android:layout_weight=".5"
                      style="@style/Layout.Full"/>
        <LinearLayout android:id="@+id/frontpage_lnrBottomBox"
                      android:layout_height="0dp"
                      android:layout_weight=".5"
                      style="@style/Layout.Full"/>
    </LinearLayout>


    <dk.redweb.hca2014.Views.TabbarBox android:id="@+id/tabbar"
            style="@style/Layout.Wrap"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>

