<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/splash_lnrPage"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:id="@+id/splash_hca"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/black">
            <ImageView
                       android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:layout_gravity="center"
                    android:src="@drawable/splash_hca_logo"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/splash_bottom"
                      android:orientation="vertical"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:background="@android:color/white">
            <ImageView
                       android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
                       android:src="@drawable/splash_redweb_logo"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/splash_errorBox"
                  style="@style/Layout.Wrap.Complete"
                  android:layout_centerInParent="true">
        <TextView android:id="@+id/splash_errorText"
                  style="@style/Layout.Wrap.Complete"
                  android:layout_margin="10sp"/>
    </LinearLayout>
</RelativeLayout>