<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  style="@style/Layout.Wrap"
                  android:orientation="horizontal">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                  android:background="@drawable/listitembox">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="8"
                android:padding="7dp">
            <TextView android:id="@+id/dailysessionlistitem_lblTimeAndPlace"
                      style="@style/Layout.Wrap.Complete"
                    android:lineSpacingMultiplier=".95"/>
            <TextView android:id="@+id/dailysessionlistitem_lblEvent"
                      style="@style/Layout.Wrap.Complete"
                      android:lineSpacingMultiplier=".95"/>
            <TextView android:id="@+id/dailysessionlistitem_lblType"
                      style="@style/Layout.Wrap.Complete"
                      android:lineSpacingMultiplier=".95"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="0dp" android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">
            <ImageView android:id="@+id/dailysessionlistitem_imgType"
                       style="@style/Image.Wrap"
                       android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View android:id="@+id/dailysessionlistitem_vwRightBorder"
              android:layout_width="5dp" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>