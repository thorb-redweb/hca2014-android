<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pushmessagedetail_scrMainView"
            style="@style/Layout.Full">
    <LinearLayout android:id="@+id/pushmessagedetail_lnrMainView"
                  style="@style/Layout.Full"   >
        <TextView android:id="@+id/pushmessagedetail_lblTitle"
                  style="@style/Layout.Wrap"/>
        <FrameLayout
                  style="@style/Layout.Wrap">
            <TextView android:id="@+id/pushmessagedetail_lblAuthor"
                      style="@style/Layout.Wrap.Complete"
                      android:layout_gravity="left"/>
            <TextView android:id="@+id/pushmessagedetail_lblDate"
                      style="@style/Layout.Wrap.Complete"
                      android:layout_gravity="right"/>
        </FrameLayout>
        <TextView android:id="@+id/pushmessagedetail_lblBody"
                  style="@style/Layout.Wrap"/>
        <dk.redweb.hca2014.Views.FlexibleButton
                android:id="@+id/pushmessagedetail_flxBackButton"
                style="@style/Layout.Wrap.Complete"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>